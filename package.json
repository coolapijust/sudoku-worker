{
  "name": "sudoku-wasm-bridge",
  "version": "1.0.0",
  "description": "Sudoku Protocol - TinyGo Wasm + Cloudflare Worker Bridge",
  "main": "dist/index.js",
  "scripts": {
    "build:wasm": "make build-wasm",
    "build:ts": "tsc",
    "build": "npm run build:wasm && npm run build:ts",
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "deploy:production": "wrangler deploy --env production",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"**/*.{ts,js,json}\""
  },
  "keywords": [
    "sudoku",
    "protocol",
    "obfuscation",
    "cloudflare-worker",
    "webassembly",
    "tinygo"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20231218.0",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0",
    "wrangler": "^3.22.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
